program NIMAngkatan;
uses crt;

var
  nim: string;

procedure TampilkanAngkatan;
var
  angkatan: string;
begin
  angkatan := Copy(nim, 1, 2);
  case angkatan of
    '20': Writeln('Mahasiswa ini Angkatan 2020');
    '21': Writeln('Mahasiswa ini Angkatan 2021');
    '22': Writeln('Mahasiswa ini Angkatan 2022');
    '23': Writeln('Mahasiswa ini Angkatan 2023');
    '24': Writeln('Mahasiswa ini Angkatan 2024');
  else
    Writeln('Data belum diketahui');
    writeln('Input harus 12 karakter  atau lebih');
  end;
end;
begin
  clrscr; 
  Write('Masukkan data NIM yang ingin dicari: ');
  Readln(nim); 
  TampilkanAngkatan;
  Readln; 
end.
